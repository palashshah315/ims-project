    <script>
        function addStockData(jsonData){
             $.ajax({
                url: '/addstockdata',
                data: JSON.stringify(jsonData),
                processData: false,
                contentType: "application/json; charset=UTF-8",
                type: 'POST',
                success: (result) => {
                    alert(result.message);
                    location.reload();
                }
            });
        };

        function submitForm(){
            var data = {
                "item_id" : document.getElementById("itemid1").value,
                "item_name" : document.getElementById("itemname1").value,
                "brand_name" : document.getElementById("brandname").value,
                "size" : document.getElementById("size1").value,
                "total_amount" : document.getElementById("amount1").value

            };
             var jsonData = data;
             addStockData(jsonData);
        };

         var submit_button = document.getElementById("submit_button");
                submit_button.onclick = function () {
                submitForm();
            };
     </script>
